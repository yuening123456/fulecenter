<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
   <RelativeLayout
       android:id="@+id/layout_back_ground"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:background="@color/orange"
       android:orientation="horizontal">
       <ImageView
           android:id="@+id/backClickArea"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/back"/>
       <cn.ucai.fulicenter_2017.ui.view.CatFiterCategoryButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@null"
           android:text="大类"
           android:drawableRight="@drawable/arrow2_up"
           android:id="@+id/CatFiter"
           android:layout_centerInParent="true"
        />

   </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/layout_back_ground">
        <Button
            android:id="@+id/btn_price"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/orange"
            android:layout_gravity="center"
            android:text="价格"
            android:textSize="20sp"
            android:gravity="center"
            android:drawableRight="@drawable/arrow_order_down"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/orange"
            android:layout_marginLeft="8dp"
            android:text="上架时间"
            android:gravity="center"
            android:id="@+id/addTime"
            android:textSize="20sp"
            android:drawableRight="@drawable/arrow_order_down"
            android:layout_gravity="center"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/layoutFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_btn"
       />

</RelativeLayout>
